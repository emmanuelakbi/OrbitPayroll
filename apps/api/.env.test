# =============================================================================
# OrbitPayroll API Backend - Test Environment Configuration
# =============================================================================
# This file is used when running tests. It configures a separate test database
# and test-specific settings.
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV=test

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3002
HOST=localhost

# -----------------------------------------------------------------------------
# Database Configuration (Test Database)
# -----------------------------------------------------------------------------
# Uses the same PostgreSQL instance but with a separate test schema
DATABASE_URL=postgresql://orbitpayroll:orbitpayroll_dev@localhost:15432/orbitpayroll?schema=test

# -----------------------------------------------------------------------------
# Authentication (Test Secrets)
# -----------------------------------------------------------------------------
JWT_SECRET=test-secret-key-for-testing-minimum-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
NONCE_EXPIRY_MINUTES=5

# -----------------------------------------------------------------------------
# Ethereum Configuration (Test/Mock)
# -----------------------------------------------------------------------------
RPC_URL=http://localhost:8545
CHAIN_ID=31337
MNEE_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# Rate Limiting (Relaxed for tests)
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX=1000
RATE_LIMIT_API_MAX=10000

# -----------------------------------------------------------------------------
# Logging (Minimal for tests)
# -----------------------------------------------------------------------------
LOG_LEVEL=error
